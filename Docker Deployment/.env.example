# ============================================================================
# Restaurant Ingredient Tracker - Environment Configuration Template
# ============================================================================
#
# Copy this file to .env and customize the values for your deployment.
# This file contains all configurable parameters for the application.
#
# SECURITY WARNING: Never commit the actual .env file to version control!
# Keep your secrets secure and use strong passwords in production.

# ============================================================================
# Application Configuration
# ============================================================================

# Application Environment (development, staging, production)
APP_ENV=production

# Enable debug mode (true/false) - only use for development
APP_DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
APP_LOG_LEVEL=INFO

# Timezone for the application
TIMEZONE=UTC

# Enable demo mode for testing without authentication
ENABLE_DEMO_MODE=true

# ============================================================================
# Streamlit Configuration
# ============================================================================

# Port configuration
HOST_PORT=8501

# Streamlit server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# File upload limits (in MB)
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=200

# ============================================================================
# Replit Authentication (for Replit deployment)
# ============================================================================

# Replit environment variables - automatically set by Replit
# Leave blank if not deploying on Replit
REPL_ID=
REPL_OWNER=
REPLIT_USER=
REPLIT_DOMAINS=

# ============================================================================
# Security Configuration
# ============================================================================

# Session secret key - CHANGE THIS IN PRODUCTION!
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# Redis Configuration (for session management)
# ============================================================================

# Redis password - CHANGE THIS IN PRODUCTION!
REDIS_PASSWORD=defaultpassword

# Redis connection settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Redis memory and performance settings
REDIS_MAXMEMORY=64mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# ============================================================================
# Nginx Configuration (for production)
# ============================================================================

# Nginx port configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Domain configuration
DOMAIN_NAME=localhost
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================================================
# Database Configuration (future expansion)
# ============================================================================

# PostgreSQL configuration (if adding database functionality)
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=restaurant_tracker
# POSTGRES_USER=tracker_user
# POSTGRES_PASSWORD=secure_password_here

# ============================================================================
# Email Configuration (for notifications - future feature)
# ============================================================================

# SMTP configuration for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# ============================================================================
# Monitoring and Logging (for production monitoring)
# ============================================================================

# Enable application monitoring
ENABLE_MONITORING=false

# Log aggregation service
# LOG_AGGREGATION_URL=https://your-log-service.com/api/logs
# LOG_AGGREGATION_TOKEN=your-token-here

# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/_health

# ============================================================================
# Performance Configuration
# ============================================================================

# Python optimization settings
PYTHONHASHSEED=random
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Memory limits for the application
MAX_MEMORY_MB=512
MAX_CPU_CORES=0.5

# ============================================================================
# Backup Configuration (for data persistence)
# ============================================================================

# Enable automatic backups
ENABLE_BACKUPS=false

# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup retention (in days)
BACKUP_RETENTION_DAYS=30

# Backup storage path
BACKUP_PATH=/app/backups

# ============================================================================
# Feature Flags (for enabling/disabling features)
# ============================================================================

# Enable PDF export functionality
ENABLE_PDF_EXPORT=true

# Enable Excel export functionality  
ENABLE_EXCEL_EXPORT=true

# Enable analytics page
ENABLE_ANALYTICS=true

# Enable sample data loading
ENABLE_SAMPLE_DATA=true

# Maximum number of ingredients per upload
MAX_INGREDIENTS_PER_UPLOAD=1000

# ============================================================================
# Development Configuration (only for development environment)
# ============================================================================

# Enable hot reload for development
DEV_HOT_RELOAD=false

# Enable debug toolbar
DEV_DEBUG_TOOLBAR=false

# Mock authentication for development
DEV_MOCK_AUTH=false

# Development database URL
DEV_DATABASE_URL=sqlite:///dev.db